<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Basics Level"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:text="Basics Level consist of basics of  Electronics, Mechanics, Programming and Arduino. "
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="Advanced Level"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="1. C programming and data structure algorithms.
2. Embedded system concept.                                               3. Embedded C for microcontrollers.                                          4. AVR and AVR programming.                                                           5. Communication protocols.                                                              6. Motors (DC, Stepper, Servo).                                                                               7. LCD, seven Segment, key bad. "
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"/>
